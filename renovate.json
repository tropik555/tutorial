{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "prCreation": "not-pending",
      "stabilityDays": 2
    }
  ],
  "prHourlyLimit": 5,
  "platformAutomerge": true
}