{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "automergeType": "branch",
  "prCreation": "not-pending",
  "prHourlyLimit": 100,
  "prConcurrentLimit" : 10,
  "requiredStatusChecks": null,
  "platformAutomerge": true,
  "internalChecksAsSuccess": true,
  "packageRules": [
    {
      "matchBaseBranches": ["main","/(^release\/[3-9]{1}\\.[3-9]{1}\\.[2-9]{1})$/"],
      "matchPackagePatterns": ["org.mockito"],
      "prPriority": 5
    },
    {
      "matchPackagePatterns": ["junit"],
      "prPriority": 6
    },
    {
      "matchPackagePatterns": ["org.springframework.boot"],
      "enabled": false
    }
  ]}