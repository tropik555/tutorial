{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "automergeType": "branch",
  "prCreation": "not-pending",
  "prHourlyLimit": 100,
  "prConcurrentLimit" : 10,
  "requiredStatusChecks": null,
  "platformAutomerge": true,
  "internalChecksAsSuccess": true,
  "packageRules": [
    {
      "matchPackageNames": ["org.springframework.boot:spring-boot-starter-data-jpa"],
      "prPriority": 4
    },
    {
      "excludePackageNames": ["org.mockito"]
    },
    {
      "matchPackagePatterns": ["junit"],
      "prPriority": 6
    }
  ]
}